<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                                                     android:background="#fff"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        style="@style/TextTitle_Black"
        android:text="PG one ?  one battle one"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextTitle_Black"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/theme_color"
        android:text="00:00:02"/>

    <FrameLayout
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <me.xiaopan.sketch.SketchImageView
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_zhcjr_gb"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            style="@style/TextTitle_White"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="最后出价人"/>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/layout_lucky"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        

        <me.xiaopan.sketch.SketchImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <me.xiaopan.sketch.SketchImageView
            android:id="@+id/img_now"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_marginTop="25dp"
            android:layout_height="70dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_huang"/>


        <LinearLayout
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/img_now"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_lucky_name"
                android:layout_height="wrap_content"
                style="@style/TextTitle_Black"
                />

            <TextView
                android:id="@+id/tv_lucky_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextDescTitle_Black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_lucky_tips"
           android:layout_below="@+id/temp"
           android:layout_centerHorizontal="true"
           android:textColor="@color/base_text_title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>


    <View
        android:id="@+id/line_lbid"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_line"/>

    <LinearLayout
        android:id="@+id/layout_lrecord"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_line"/>

    <LinearLayout
        android:id="@+id/btn_join_list"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_pjjl"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="拍价记录"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_row_forward"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/base_app_bg"/>


    <TextView
        android:id="@+id/tv_buy_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="累计消费：0拍币，0购币"
        />


    <me.xiaopan.sketch.SketchImageView
        android:id="@+id/img_gzhp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#fff"
        app:layout_heightPercent="8%w"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="#fff"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_qpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="起拍价：￥0.00"
            style="@style/TextTitle_Black"/>

        <TextView
            android:id="@+id/tv_jjfd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加价幅度：￥0.10"
            style="@style/TextTitle_Black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sxf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手续费：1拍币/次"
            style="@style/TextTitle_Black"/>

        <TextView
            android:id="@+id/tv_jpdjs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="竞拍倒计时：10s"
            style="@style/TextTitle_Black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cjgm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="差价购买：有"
            style="@style/TextTitle_Black"/>

        <TextView
            android:id="@+id/tv_tbbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退币比例：30%"
            style="@style/TextTitle_Black"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/base_line"/>

    <TextView
        android:id="@+id/btn_jpxq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细说明>>"
        style="@style/TextTitle_Black"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/base_blue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/base_app_bg"/>

</com.zhy.android.percent.support.PercentLinearLayout>