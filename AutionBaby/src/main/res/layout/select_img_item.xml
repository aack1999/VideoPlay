<?xml version="1.0" encoding="utf-8"?>
<com.aution.paidd.ui.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="100dp"
              android:layout_height="match_parent">

    <me.xiaopan.sketch.SketchImageView
        android:id="@+id/ll_pic_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/fabushaidan" />

    <ImageView
        android:id="@+id/btn_clear_1"
        android:layout_width="20dp"
        android:layout_gravity="right|top"
        android:src="@drawable/clear_red"
        android:visibility="gone"
        android:layout_height="20dp" />

</com.aution.paidd.ui.widget.SquareFrameLayout>