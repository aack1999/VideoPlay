<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_view_height"
        android:background="@color/nav_color"
        />

    <include layout="@layout/framework_base_topnav_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical">

                <me.xiaopan.sketch.SketchImageView
                    android:id="@+id/img_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nameid"
                        style="@style/TextTitle_Black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="who is you ..."/>

                    <TextView
                        android:id="@+id/tv_score"
                        style="@style/TextDescTitle_Black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

                <com.framework.core.widget.FlatButton
                    android:id="@+id/btn_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="签到"
                    app:fb_radius="45dp"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/base_line"/>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="10dp"
                style="@style/TextTitle_Black"/>

            <com.aution.paidd.ui.widget.SignZView
                android:id="@+id/signzview"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textSize="12sp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_1"
                        android:text="1天,+10积分"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_2"
                        android:textSize="12sp"
                        android:text="2天,+20积分"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_3"
                        android:textSize="12sp"
                        android:text="3天,+30积分"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_4"
                        android:textSize="12sp"
                        android:text="4天,+40积分"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_5"
                        android:textSize="12sp"

                        android:text="5天,+50积分"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textColor="@color/tab_color_select"
                        android:id="@+id/tv_6"
                        android:textSize="12sp"

                        android:text="6天,+60积分"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <me.xiaopan.sketch.SketchImageView
                        android:id="@+id/img7"
                        android:layout_width="56dp"
                        android:layout_height="56dp"/>

                    <TextView
                        android:id="@+id/tv_7"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textSize="12sp"

                        android:textColor="@color/tab_color_select"
                        android:text="7天,+70积分"/>

                </LinearLayout>


            </com.aution.paidd.ui.widget.SignZView>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_app_bg"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_ddp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextTitle_Black"
                    android:text="签到说明"/>
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_tip_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                style="@style/TextTitle_Black"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/base_app_bg"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>