<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_horizontal|bottom"
        android:singleLine="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="提示"
        android:textColor="@color/base_text_title"
        android:textSize="16sp"
        android:background="@drawable/dialog_top_bg"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/base_text_title"
            android:layout_height="wrap_content"
            android:text="你确定要这样做吗?"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="match_parent"
            android:background="@drawable/dialog_left_button"
            android:text="取消"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#008aff"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/base_item_line"/>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="match_parent"
            android:background="@drawable/dialog_right_button"
            android:text="确定"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#008aff"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>